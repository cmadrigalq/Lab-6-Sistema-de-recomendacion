<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1faf1"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/checkBox1"
        style="?android:attr/starStyle"
        android:layout_width="139dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="65dp"
        android:text="CheckBox #1"
        android:textColorLink="@android:color/holo_purple"
        app:layout_constraintEnd_toStartOf="@+id/checkBox2"
        tools:layout_editor_absoluteY="69dp" />


    <CheckBox
        android:id="@+id/checkBox2"
        style="?android:attr/starStyle"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/checkBox1"
        android:layout_marginTop="130dp"
        android:text="CheckBox #2"
        android:textColorLink="@android:color/holo_green_light"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="69dp" />

    <EditText
        android:id="@+id/txt"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/checkBox2"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:text="Probando..."
        android:textColor="@android:color/holo_green_dark"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/checkBox1"
        android:layout_centerVertical="true"
        android:text="Subtotal:"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="209dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/txt"
        android:layout_alignParentTop="true"
        android:text="PRODUCTOS"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="115dp"
        android:layout_marginEnd="70dp"
        android:background="@android:color/holo_orange_light"
        android:text="Tramitar pedido"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</RelativeLayout>